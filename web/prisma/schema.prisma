// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  username  String   @unique
  name      String
  bio       String   @db.VarChar(255)
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  posts      Post[]  @relation(name: "Author")
  images     Image[] @relation("owner")
  likedPosts Post[]  @relation(name: "Likes")

  avatarId String?
  avatar   Image?  @relation(fields: [avatarId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  comments Comment[]
}

model Post {
  id        String   @id @default(uuid())
  title     String   @db.VarChar(255)
  content   String   @db.Text
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  authorId String
  author   User   @relation(name: "Author", fields: [authorId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  likes User[] @relation(name: "Likes")

  images Image[]

  comments Comment[]

  @@index([createdAt])
  @@index([authorId])
}

model Image {
  id   String @id @default(uuid())
  data Bytes

  height Int
  width  Int

  ownerId String
  owner   User   @relation("owner", fields: [ownerId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  posts Post[]
  User  User[]
}

model Comment {
  id        String    @id @default(uuid())
  content   String    @db.Text
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deleted   Boolean   @default(false)
  deletedAt DateTime?

  authorId String
  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  postId String
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  comments Comment[] @relation("parentComment")

  fatherCommentId String?
  fatherComment   Comment? @relation("parentComment", fields: [fatherCommentId], references: [id])
}
